<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="input">
		<fields name="fields">
			<fields name="{FIELD_NAME}">
				<field name="field_id" type="text" readonly="true"
					class="readonly" size="10" default="0"
					label="JGLOBAL_FIELD_ID_LABEL"	description="JGLOBAL_FIELD_ID_DESC"
				/>
				<field name="field_name" type="text" readonly="true"
					class="readonly" size="20" default="text"
					label="Field Name"	description="Field Name Desc"
				/>
				<!--
					TODO: need the Select list for:
							- select one of the available types
				-->
				<field name="field_type" type="text" readonly="true"
					class="readonly" size="20" default="text"
					label="Field Type"	description="Field Type Desc"
				/>


				<field name="ordering" type="text" readonly="true"
					class="readonly" size="10" default="0"
					label="Field Ordering"	description="JFIELD_ORDERING_DESC"
				/>

				<field name="state" type="radio"
					filter="intval" default="1" class="btn-group"
					label="JSTATUS" description="JFIELD_PUBLISHED_DESC">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field name="access" type="accesslevel" label="JFIELD_ACCESS_LABEL"
					description="JFIELD_ACCESS_DESC" class="small" size="1" />

			</fields>
		</fields>
	</fieldset>

	<fieldset name="value">
		<fields name="fields">
			<fields name="{FIELD_NAME}">
				<field name="field_id" type="text" readonly="true"
					class="readonly" size="10" default="0"
					label="JGLOBAL_FIELD_ID_LABEL"	description="JGLOBAL_FIELD_ID_DESC"
				/>
				<field name="field_name" type="text" readonly="true"
					class="readonly" size="20" default="text"
					label="Field Name"	description="Field Name Desc"
				/>
				<!--
					TODO: need the Select list for:
							- select one of the available types
				-->
				<field name="field_type" type="text" readonly="true"
					class="readonly" size="20" default="text"
					label="Field Type"	description="Field Type Desc"
				/>

				<field name="ordering" type="text" readonly="true"
					class="readonly" size="10" default="0"
					label="Field Ordering"	description="JFIELD_ORDERING_DESC"
				/>

				<field name="state" type="radio"
					filter="intval" default="1" class="btn-group"
					label="JSTATUS" description="JFIELD_PUBLISHED_DESC">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field name="access" type="accesslevel" label="JFIELD_ACCESS_LABEL"
					description="JFIELD_ACCESS_DESC" class="small" size="1" />


				<!--
					TODO: what else we need here ???
				-->
			</fields>
		</fields>
	</fieldset>

</form>