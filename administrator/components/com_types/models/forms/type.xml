<?xml version="1.0" encoding="utf-8"?>
<form>

	<field name="type_id"	type="text"
		default="0"	size="6" readonly="true"
		class="readonly" labelclass="control-label"
		label="JGLOBAL_FIELD_ID_LABEL" description ="JGLOBAL_FIELD_ID_DESC"
	/>

	<field name="type_title" type="text"
		size="40" required="true"
		class="inputbox" labelclass="control-label"
		label="JGLOBAL_TITLE" description="JFIELD_TITLE_DESC"
	/>

	<field name="type_alias" type="text"
		size="40" readonly="true"
		class="readonly" labelclass="control-label"
		label="JFIELD_ALIAS_LABEL" description="JFIELD_ALIAS_DESC"
	/>

	<field name="layout_name" type="hidden" />

	<fields name="params">
		<field name="metadata" type="radio"
			filter="intval" default="1" class="state btn-group"
			labelclass="control-label"
			label="Metadata" description="Use metadata form">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="publish_options" type="radio"
			filter="intval" default="1" class="state btn-group"
			labelclass="control-label"
			label="Publish Options" description="Use Publish Options form">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="permissions" type="radio"
			filter="intval" default="1" class="state btn-group"
			labelclass="control-label"
			label="Permissions" description="Use Permissions form">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
	</fields>

</form>
