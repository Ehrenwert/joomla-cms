<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="input">
		<fields name="fields">
			<fields name="{FIELD_NAME}">
				<fields name="params">
					<!-- Configurations for possible field attributes -->
					<!--
						TODO: need the Select list for:
								- slect Validation
								- select Filter
					-->
					<field name="label"	type="text"
						default=""	size="10" labelclass="control-label"
						label="COM_TYPES_FIELD_LABEL_LABEL" description ="COM_TYPES_FIELD_LABEL_DESC"
					/>

					<field name="default" type="text" labelclass="control-label"
						label="Default" description="Default Value"
					/>

					<field name="validation" type="list" labelclass="control-label"
						label="COM_TYPES_FIELD_VALIDATION_LABEL"
						description="COM_TYPES_FIELD_VALIDATION_DESC"
					>
						<option value="0">JNONE</option>
						<option value="required">JREQUIRED</option>
						<option value="email">COM_TYPES_FIELD_EMAIL</option>
						<option value="url">URL</option>
					</field>

					<field name="filter" type="list" default="string"
						labelclass="control-label"
						label="COM_TYPES_FIELD_FILTER_LABEL"
						description="COM_TYPES_FIELD_FILTER_DESC"
					>
						<option value="string">STRING</option>
						<option value="int">INTEGER</option>
						<option value="float">FLOAT</option>
						<option value="html">HTML</option>
					</field>

					<field name="size"	type="text"
						default="20"	size="3" filter="int"
						label="Size" description="Field Size"
						labelclass="control-label"
					/>

					<field name="maxlength"	type="text"
						size="6" filter="int"
						label="Max Length" description="Max Length"
						labelclass="control-label"
					/>

					<field name="class"	type="text"
						label="Class" description="Field class"
						labelclass="control-label"
					/>

					<field name="onchange"	type="text"
						label="Onchange" description="Onchange attribute"
						labelclass="control-label"
					/>
				</fields>
			</fields>
		</fields>
	</fieldset>

	<fieldset name="value">
		<fields name="fields">
			<fields name="{FIELD_NAME}">
				<fields name="params">
					<field name="label"	type="text"
						default=""	size="20" labelclass="control-label"
						label="COM_TYPES_FIELD_LABEL_LABEL" description ="COM_TYPES_FIELD_LABEL_DESC"
					/>
					<!--
						TODO: make a field for allow to select format type, and format options
					-->
					<field name="format" type="format"
						default=""	size="20" labelclass="control-label"
						label="Format" description ="Format the value"
					/>
				</fields>
			</fields>
		</fields>
	</fieldset>
</form>