			addfieldpath="/administrator/components/com_items/model/field">

			<field name="type_alias" type="contenttypealias"
				label="Content Type"
				required="true"
				clear="false"
				description="Content Type"
			/>
			<!-- @TODO: sitch by javascript -->
			<field name="layout_name" type="contenttypeslayouts"
				label="Item layout"
				required="true"
				clear="false"
				description="Item layout"
			/>

			<!-- @TODO: make me better -->
			<field name="filter" type="text"
				label="Item Filter"
				required="true"
				clear="false"
				default="catid[value]=1"
				description="Item Filter"
			/>

			<!-- @TODO: ordering -->

		</fieldset>
	</fields>

	<!-- Add fields to the parameters object for the layout. -->
	<fields name="params">

		<!-- Basic options. -->
		<fieldset name="basic">


		</fieldset>
	</fields>
